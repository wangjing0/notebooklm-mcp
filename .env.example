# NotebookLM MCP - Environment Variables
# Copy this file to .env and fill in your values.

# ── Required ──────────────────────────────────────────────────────────────────

# URL of the NotebookLM notebook to interact with
NOTEBOOK_URL=

# ── Auto-login (optional, but required when AUTO_LOGIN_ENABLED=true) ──────────

AUTO_LOGIN_ENABLED=false
LOGIN_EMAIL=
LOGIN_PASSWORD=
AUTO_LOGIN_TIMEOUT_MS=120000

# ── Browser ───────────────────────────────────────────────────────────────────

HEADLESS=true
BROWSER_TIMEOUT=30000
MAX_SESSIONS=10
SESSION_TIMEOUT=900

# ── Stealth ───────────────────────────────────────────────────────────────────

STEALTH_ENABLED=true
STEALTH_RANDOM_DELAYS=true
STEALTH_HUMAN_TYPING=true
STEALTH_MOUSE_MOVEMENTS=true
TYPING_WPM_MIN=160
TYPING_WPM_MAX=240
MIN_DELAY_MS=100
MAX_DELAY_MS=400

# ── Notebook profile ──────────────────────────────────────────────────────────

# Strategy for browser profile reuse: auto | single | isolated
NOTEBOOK_PROFILE_STRATEGY=auto
# Clone the base profile when using isolated strategy
NOTEBOOK_CLONE_PROFILE=false
NOTEBOOK_CLEANUP_ON_STARTUP=true
NOTEBOOK_CLEANUP_ON_SHUTDOWN=true
# Hours before an instance profile is considered stale
NOTEBOOK_INSTANCE_TTL_HOURS=72
NOTEBOOK_INSTANCE_MAX_COUNT=20

# ── Notebook metadata (used to build context for the LLM) ─────────────────────

NOTEBOOK_DESCRIPTION=General knowledge base
# Comma-separated lists
NOTEBOOK_TOPICS=General topics
NOTEBOOK_CONTENT_TYPES=documentation,examples
NOTEBOOK_USE_CASES=General research

# ── Tool settings ─────────────────────────────────────────────────────────────

# Comma-separated list of tool names to disable
NOTEBOOKLM_DISABLED_TOOLS=
# Profile name override for settings manager
NOTEBOOKLM_PROFILE=
